{
  "name": "svelte",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:wrangler": "nodemon -w src -w drizzle -w static --exec 'wrangler pages dev --port 5173'",
    "dev:build": "vite build --watch",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "drizzle-kit migrate --config local.drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240712.0",
    "@sveltejs/adapter-cloudflare": "^4.6.1",
    "@sveltejs/enhanced-img": "^0.3.0",
    "@sveltejs/kit": "^2.5.18",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/eslint": "^9.0.0",
    "autoprefixer": "^10.4.19",
    "better-sqlite3": "^11.1.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-svelte": "^2.42.0",
    "globals": "^15.8.0",
    "lucide-svelte": "^0.424.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.4",
    "svelte-eslint-parser": "^0.41.0",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.30",
    "vite": "^5.3.3",
    "wrangler": "^3.64.0"
  },
  "type": "module",
  "dependencies": {
    "@auth/drizzle-adapter": "^1.4.1",
    "@auth/sveltekit": "^1.4.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.32.0",
    "tailwind-merge": "^2.4.0"
  }
}
